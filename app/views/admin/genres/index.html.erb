<h2>ジャンル一覧・追加</h2>
<br></br
<%= form_with model: @genre, url: admin_genres_path do |f| %>

  <div class="form-group">
    &nbsp;&nbsp;&nbsp;<%= f.label :name, 'ジャンル名' %>
    &nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field :name, placeholder: "ジャンル名" %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.submit '新規登録', class: "btn btn-default" %>
  </div>
<% end %>

<style>
table {
    padding: 0;
    width: 8cm;
    height: 1cm;
    border-collapse: separate;
    border-spacing: 0;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}

th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ccc;
}

th {
    background-color: #f2f2f2;
}

table td a {
    text-decoration: underline;
    color: black;
}

h2 {
    background-color: #f5f5f5;
    text-align: center;
    padding: 0;
    width: 8cm;
    height: 1cm;
}

.btn.btn-success {
    font-weight: bold;
    font-size: 15px;
    margin: 10px;
    margin-top: 0px;
    text-decoration: none;
    float: right /* これ使いやすいよ！ */
}

.btn.btn-default {
    background-color: #28a745;
    color: #fff;
    font-weight: bold;
    width: 3.5cm;
    height: 1cm;
    border-radius: 10px;
}

body {
    width: 80%;
    margin: 0 auto;
}
</style>

<table class="table-half">
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
     <td>
      <%= genre.name %> <%= raw "&nbsp;" %> <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
     </td>
    </tr>
    <% end %>
  </tbody>
</table>