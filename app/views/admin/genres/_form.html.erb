<%= form_with model: genre, url: admin_genre_path do |f| %>
  <div class="form-group">
    
    <%= f.label :name, 'ジャンル名' %>
    <%= f.text_field :name %>
  </div>

  <% if current_page?(admin_genres_path) %>
    <%= f.submit '新規登録' %>
  <% else %>
    <%= f.submit '変更を保存' %>
  <% end %>
<% end %>
