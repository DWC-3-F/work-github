<h1>items#show</h1>

<h2>商品詳細</h2>
<div>
  <%= image_tag @item.image, alt: @item.name if @item.image.attached? %>
</div>

<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <td>税込価格(税抜価格)</td>
    <td><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td>
      <% if @item.is_active %>
        販売中
      <% else %>
        販売停止中
      <% end %>
    </td>
  </tr>
  <tr>
    <td><%= link_to '編集する', edit_admin_item_path(@item), class: 'btn btn-primary' %></td>
  </tr>
</table>