<h1>items#edit</h1>

<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path do |f| %>

     <div class="form-group">
        <%= f.label :image, for: 'item_image' %>
        <%= f.file_field :image, id: 'item_image' %>
     </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      
      <div class="form-group">
        <%= f.label :genre_id %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: 'Select Genre', class: "form-control genre-select" %>
      </div>

      
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_area :price, class: "form-control introduction" %>
      </div>
      
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      
      <div class="form-group">
        <%= f.label :is_active, '販売ステータス' %>
      <div>
        <%= f.radio_button :is_active, true %> 販売中
        <%= f.radio_button :is_active, false %> 販売停止中
      </div>
     </div>

    <% end %>




