<h2>商品編集</h2>
<table>
  <%= form_with model: @item, url: admin_item_path do |f| %>
  <tr>
    <td><%= f.label :image, '商品画像', for: 'item_image' %></td>
    <td><%= f.file_field :image, id: 'item_image' %></td>
  </tr>
  <tr>
    <td><%= f.label :name, '商品名' %></td>
    <td><%= f.text_field :name, class: "form-control name" %></td>
  </tr>
  <tr>
    <td><%= f.label :introduction, '商品説明' %></td>
    <td><%= f.text_area :introduction, class: "form-control introduction" %></td>
  </tr>
  <tr>
    <td><%= f.label :genre_id, 'ジャンル' %></td>
    <td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: 'Select Genre', class: "form-control genre-select" %></td>
  </tr>
  <tr>
    <td><%= f.label :price, '税抜価格' %></td>
    <td><%= f.text_field :price, class: "form-control introduction" %>円</td>
  </tr>
  <tr>
    <td><%= f.label :is_active, '販売ステータス' %></td>
    <td>
      <%= f.radio_button :is_active, true %> 販売中
      <%= f.radio_button :is_active, false %> 販売停止中
    </td>
  </tr>
  <tr>
    <td><%= f.submit '変更を保存', class: 'btn btn-secondary' %></td>
  </tr>
  <% end %>
</table>