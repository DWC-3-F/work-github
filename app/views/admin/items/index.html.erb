<h2>商品一覧</h2>
<br></br>
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}
th, td {
    padding: 8px;
    text-align: left;
}
th {
    background-color: #f2f2f2;
}

table td a {
    text-decoration: underline;
    color: black;
}

h2 {
    background-color: #f5f5f5;
    text-align: center;
    padding: 0;
    width: 5cm;
    height: 1cm;
}

.btn.btn-primary{
  width: 55px;
  height: 55px;
  border-radius: 50%;
  transition: .2s;
  box-shadow: 2px 2px #666666;
  font-size: 25px;
  background-color: white;
  color: #666666;
  border: white;
  position: absolute;
  top: 8%;
  right: 30;
  left: 80%;
}

body {
    width: 80%;
    margin: 0 auto;
}

.status-active {
    color: #28a745;
    font-weight: bold;
}

.status-inactive {
    color: #ccc;
    font-weight: bold;
}
</style>
</head>
<body>
<div>
  <%= link_to '＋', new_admin_item_path, class: 'btn btn-primary' %>
</div>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td class="<%= item.is_active ? 'status-active' : 'status-inactive' %>">
        <%= item.is_active ? '販売中' : '販売停止中' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>