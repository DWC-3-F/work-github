<h2>管理者ログイン</h2>
<br></br>
<style>
h2 {
    background-color: #f5f5f5;
    text-align: center;
    padding: 0;
    width: 7cm;
    height: 1cm;
}

.btn.btn-primary {
    font-weight: bold;
    width: 3.5cm;
    height: 1cm;
    border-radius: 10px;
    text-decoration: none;
}

.form-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
    width: 50%;
    margin-top: 20px;
}

.field {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.field input {
    width: 60%;
    box-sizing: border-box;
}

.actions {
    margin-top: 10px;
    text-align: left;
}

body {
    width: 80%;
    margin: 0 auto;
}
</style>

<div class="form-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com" %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<%= render "admin/shared/links" %>

