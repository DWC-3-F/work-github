<h2>ログイン</h2>
<br></br>
<style>
h2 {
    background-color: #f5f5f5;
    text-align: center;
    padding: 0;
    width: 4cm;
    height: 1cm;
}

p {
    background-color: #f5f5f5;
    text-align: center;
    padding: 0;
    width: 7cm;
    height: 0.7cm;
}

.btn.btn-primary {
    font-weight: bold;
    width: 3.5cm;
    height: 1cm;
    border-radius: 10px;
    text-decoration: none;
}

.form-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
    width: 50%;
    margin-top: 20px;
}

.field {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.field input {
    width: 60%;
    box-sizing: border-box;
}

.actions {
    margin-top: 10px;
    position: relative;
    right: 0%;
    left: 40%;
}

body {
    width: 80%;
    margin: 0 auto;
}
</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-container">
    <div class="field">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@wxsample.com" %>
    </div>

    <div class="field">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
    </div>
</div>
<% end %>

<p>会員登録がお済みでない方</p>
<%= render "public/shared/links" %>
