<h2>商品一覧(全<%= @items.total_count %>件)</h2>

<div class="item-container">
  <div class="item-grid">
    <% @items.each do |item| %>
      <div class="item-box">
        <% if item.image.attached? %>
          <%= link_to item_path(item) do %>
           <%= image_tag item.image, class: 'item-image' %>
          <% end %>
        <% end %>
        <h5><%= item.name %></h5>
        <h5>￥<%= item.add_tax_price.to_s(:delimited) %></h5>
      </div>
    <% end %>
  </div>
  <div class="pagination">
    <%= paginate @items %>
  </div>
</div>


