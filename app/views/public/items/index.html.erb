<h2>商品一覧(全<%= @items.total_count %>件)</h2>

<div class="item-container">
  <div class="item-grid">
    <% @items.each do |item| %>
      <div class="item-box">
        <%= image_tag item.image, class: 'item-image' if item.image.attached? %>
        <h5><%= item.name %></h5>
        <h5><%= number_to_currency(item.price, unit: "¥", strip_insignificant_zeros: true) %></h5>
      </div>
    <% end %>
  </div>
  <div class="pagination">
    <%= paginate @items %>
  </div>
</div>


