<h2>配送先登録/一覧</h2>

<%#= render "public/shared/error_messages", resource: resource %>

<%= render 'form', address: @address %>

<table>
  <tr>
    <td>郵便番号</td>
    <td>住所</td>
    <td>宛名</td>
    <td></td>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.post_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td>
      <%= link_to '編集する', edit_address_path(address) %>
      <%= link_to '削除する', address_path(address), method: :delete, class: 'delete-link' %>
    </td>
  </tr>
  <% end %>
</table>
