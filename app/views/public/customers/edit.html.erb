<h2>会員情報編集</h2>

<table>
  <%= form_with model: @customer, url: customers_information_edit_path, local: true do |f| %>

  <tr>
    <td>氏名</td>
    <td><%= f.text_field :last_name, autofocus: true %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= f.text_field :last_name_kana, autofocus: true %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :post_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= f.text_field :telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>
  <tr>
    <td><%= link_to '編集内容を保存', customers_information_path, method: :patch %></td>
    <td><%= link_to '退会する', customers_check_path %></td>
  </tr>
  <% end %>
</table>