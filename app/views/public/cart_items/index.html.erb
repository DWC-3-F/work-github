<h4>ショッピングカート</h4>
<table>
   <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
   </tr>
     <% total = 0 %>

 <% if current_customer.cart_items.present? %>
    <%= form_for @cart_item do |f| %>
     <tr>
       <td>
         <%= image_tag item.image, class: 'item-image' %>
         <%= cart_item.item.name %>
       </td>
       <td><%= (cart_item.item.price*1.08).to_i %></td>
       <td>
         <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
           <%= f.number_field :amount, min: 1, max:10, id: "quantity_cart"%>
           <%= f.submit "変更",class: "btn btn-success" %>
         <% end %>
       </td>
       <td>
         <% subtotal = ((cart_item.item.price*cart_item.quantity)*1.08).to_i %>
         <%= subtotal %>
       </td>
       <td>
         <%= link_to "商品をカートから削除する", cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger" %>
       </td>
     </tr>
       <% total += subtotal %>
     <% end %>
<% end %>
   <tr>    
    <th>合計金額</th>
    <td><%= total %></td>
   </tr>

