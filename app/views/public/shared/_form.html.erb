<style>
.form-container {
    width: 80%;
}

.table {
    width: 100%; 
    table-layout: fixed;
    border-collapse: collapse;
}

.table th, .table td {
    padding: 10px;
    text-align: left;
    border: none;
}

.btn {
    font-weight: bold;
    width: 16%;

    text-align: center;
}

@media (max-width: 768px) {
    .form-container {
        width: 100%;
    }

    .table {
        width: 100%;
    }
</style>
<div class="form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <table class="table">
            <tr>
                <td>名前</td>
                <td class='col-md-1'><%= f.label :last_name, '(姓)' %></td>
                <td><%= f.text_field :last_name, autofocus: true, placeholder: "令和" %></td>
                <td class='col-md-1'><%= f.label :first_name, '(名)' %></td>
                <td><%= f.text_field :first_name, placeholder: "道子" %></td>
            </tr>
            <tr>
                <td>フリガナ</td>
                <td><%= f.label :last_name_kana, '(セイ)' %></td>
                <td><%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %></td>
                <td><%= f.label :first_name_kana, '(メイ)' %></td>
                <td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
            </tr>
            <tr>
                <td>メールアドレス</td>
                <td></td>
                <td colspan="3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com" %></td>
            </tr>
            <tr>
                <td>郵便番号(ハイフンなし)</td>
                <td></td>
                <td colspan="3"><%= f.text_field :post_code, placeholder: "0000000" %></td>
            </tr>
            <tr>
                <td>住所</td>
                <td></td>
                <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 95%;" %></td>
            </tr>
            <tr>
                <td>電話番号(ハイフンなし)</td>
                <td></td>
                <td colspan="3"><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
            </tr>
            <tr>
                <td>パスワード
                <% if @minimum_password_length %>
                    (<%= @minimum_password_length %>文字以上)
                <% end %>
                </td>
                <td></td>
                <td colspan="3"><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
                <td>パスワード(確認用)</td>
                <td></td>
                <td colspan="3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
                <td colspan="5" class="actions">
                    <%= f.submit "新規登録", class: "btn btn-success" %>
                </td>
            </tr>
        </table>
    <% end %>
</div>
